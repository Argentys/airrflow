/*
 * --------------------------------------------------
 *  Config file for defining DSL2 per module options
 * --------------------------------------------------
 *
 *   Available keys to override module options:
 *       args           = Additional arguments appended to command in module.
 *       args2          = Second set of arguments appended to command in module (multi-tool modules).
 *       publish_dir    = Directory to publish results.
 *       publish_by_id  = Publish results in separate folders by meta.id value.
 *       publish_files  = Groovy map where key = "file_ext" and value = "directory" to publish results for that file extension
 *                        The value of "directory" is appended to the standard "publish_dir" path as defined above.
 *                        If publish_files == null (unspecified)  - All files are published.
 *                        If publish_files == false               - No files are published.
 *       suffix         = File name suffix for output files.
 *       subcommand     = Subcommand for some tools
 */

params {
    modules {
        'fastqc' {
            args = "--quiet"
        }
        'multiqc' {
            args = ""
        }
        'presto_filterseq' {
            publish_dir   = 'presto/filterseq'
            publish_files = [ 'log':'logs', 'tab':'tabs', 'log.txt':'logs' ]
            publish_by_id = true
        }
        'presto_maskprimers' {
            publish_dir   = 'presto/maskprimers'
            publish_files = [ 'log':'logs', 'tab':'tabs', 'log.txt':'logs' ]
            publish_by_id = true
        }
        'presto_pairseq' {
            publish_dir   = 'presto/pairseq'
            publish_files = [ 'log':'logs', 'tab':'tabs', 'log.txt':'logs' ]
            publish_by_id = true
        }
        'presto_clustersets' {
            publish_dir   = 'presto/clustersets'
            publish_files = [ 'log':'logs', 'tab':'tabs', 'log.txt':'logs' ]
            publish_by_id = true
        }
        'presto_buildconsensus' {
            publish_dir   = 'presto/buildconsensus'
            publish_files = [ 'log':'logs', 'tab':'tabs', 'log.txt':'logs' ]
            publish_by_id = true
        }
        'presto_postconsensus_pairseq' {
            publish_dir   = 'presto/pairseq_postconsensus'
            publish_files = [ 'log':'logs', 'tab':'tabs', 'log.txt':'logs' ]
            publish_by_id = true
        }
        'presto_assemblepairs' {
            publish_dir   = 'presto/assemblepairs'
            publish_files = [ 'log':'logs', 'tab':'tabs', 'log.txt':'logs' ]
            publish_by_id = true
        }
        'presto_parseheaders_collapse' {
            subcommand = "collapse"
            args = "-f CONSCOUNT --act min"
        }
        'presto_parseheaders_copy' {
            subcommand = "copy"
            args = "-f PRCONS PRCONS --act first last -k C_PRIMER V_PRIMER"
        }
    }
}