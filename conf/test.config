/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/bcellmagic -profile test
 */

params {
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  // Input data
  metadata = 'https://github.com/nf-core/test-datasets/blob/bcellmagic/metadata/Metadata_test.tsv'
  cprimers = 'https://github.com/nf-core/test-datasets/blob/bcellmagic/metadata/C_primers.fasta'
  vprimers = 'https://github.com/nf-core/test-datasets/blob/bcellmagic/metadata/V_primers.fasta'
  imgtdb_base = 'https://github.com/nf-core/test-datasets/tree/bcellmagic/db-cache/imgtdb_base'
  igblast_base = 'https://github.com/nf-core/test-datasets/tree/bcellmagic/db-cache/igblast_base'
}
